<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
       <!-- <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--ZProgressHUD-->
    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>

    <style name="MyWidget" parent="@android:style/Theme" />
    <style name="MyWidget.TabText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/indicator_change</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <!-- 对话框 -->
    <style name="DialogWindowTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorInput</item>
    </style>
    <style name="dialog_tran" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>
    <style name="dialog_untran" parent="dialog_tran">
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="CustomRadioButtonTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/image_selectchange</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/image_checkchange</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    <!--对话框样式-->
    <style name="CustomAlertDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/shape_lnull_bwhite_r8</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="font_red_12">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/bg_red</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="font_9_12">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/font_9</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="font_blue_14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/font_blue</item>
    </style>

    <style name="font_blue_12">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/font_blue</item>
    </style>
    <style name="font_9_14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/font_9</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="met_nomal">
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="com.tdr.familytreasure:met_baseColor">@color/font_6</item>
        <item name="com.tdr.familytreasure:met_clearButton">true</item>
        <item name="com.tdr.familytreasure:met_floatingLabel">normal</item>
        <item name="com.tdr.familytreasure:met_primaryColor">@color/bg_blue</item>
    </style>
</resources>
