<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="24dp">


        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginRight="16dp"
            android:background="@mipmap/ic_head"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                style="@style/font_3_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="迈克尔"/>

            <TextView
                style="@style/font_9_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击查看或者编辑信息"/>

        </LinearLayout>

    </LinearLayout>

    <View style="@style/divider_nomal_horizontal_8"/>


    <LinearLayout
        android:id="@+id/ll_me_devices"
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_marginRight="14dp"
            android:background="@mipmap/ic_me_device"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

      <TextView
          style="@style/font_3_15"
          android:text="设备列表"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>

    </LinearLayout>
    <View style="@style/divider_nomal_horizontal_8"/>
    <LinearLayout
        android:id="@+id/ll_me_setting"
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_marginRight="14dp"
            android:background="@mipmap/ic_me_setting"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <TextView
            style="@style/font_3_15"
            android:text="设置"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <View style="@style/divider_nomal_horizontal"/>
    <LinearLayout
        android:id="@+id/ll_me_report"
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_marginRight="14dp"
            android:background="@mipmap/ic_me_report"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <TextView
            style="@style/font_3_15"
            android:text="意见反馈"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <View style="@style/divider_nomal_horizontal_8"/>
</LinearLayout>