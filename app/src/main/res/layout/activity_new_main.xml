<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_new_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        style="@style/divider_nomal_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_tab_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_home"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/ic_tab_home_sel"/>

            <TextView
                android:id="@+id/tv_tab_home"
                style="@style/font_blue_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="首页"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab_love"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_love"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/ic_tab_love_nor"/>

            <TextView
                android:id="@+id/tv_tab_love"
                style="@style/font_9_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="关爱"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_tab_msg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_msg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/ic_tab_msg_nor"/>

            <TextView
                android:id="@+id/tv_tab_msg"
                style="@style/font_9_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="消息"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_tab_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_me"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/ic_tab_me_nor"/>

            <TextView
                android:id="@+id/tv_tab_me"
                style="@style/font_9_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="我"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>