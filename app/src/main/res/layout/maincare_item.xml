<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_tag"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:paddingLeft="15dp">

        <TextView
            android:id="@+id/text_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="未关爱对象"
            android:textColor="@color/colorHint"
            android:textSize="12sp"/>
    </LinearLayout>

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/sample"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/linear_tag"
        android:layout_centerVertical="true"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:tag="Bottom1">

            <TextView
                android:id="@+id/tv_footprint"
                android:layout_width="65dp"
                android:layout_height="105dp"
                android:layout_gravity="center"
                android:background="#37af4d"
                android:gravity="center"
                android:text="轨迹"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/text_alarm"
                android:layout_width="65dp"
                android:layout_height="105dp"
                android:layout_gravity="center"
                android:background="#b3b2b2"
                android:gravity="center"
                android:text="报警"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/text_share"
                android:layout_width="65dp"
                android:layout_height="105dp"
                android:layout_gravity="center"
                android:background="@color/colorShare"
                android:gravity="center"
                android:text="分享"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/text_del"
                android:layout_width="65dp"
                android:layout_height="105dp"
                android:layout_gravity="center"
                android:background="@color/colorDel"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/white"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_head"
                    android:text="预警"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <RelativeLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"

                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_olderName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="李双江"
                            android:textColor="@color/colorInput"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/text_braceletBattery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"
                            android:text="电量过低"
                            android:textColor="@color/colorBattery"
                            android:textSize="15sp"
                            android:visibility="gone"/>


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp">

                        <TextView
                            android:id="@+id/tv_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_bg_man"
                            android:paddingBottom="2dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="2dp"
                            android:text=""
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/tv_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:background="@drawable/shape_bg_age"
                            android:paddingBottom="2dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="2dp"
                            android:text=""
                            android:textColor="@color/white"/>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="62dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@mipmap/image_unprotection"
                android:text="登记"
                android:textColor="@color/colorStatus"
                android:textSize="12sp"
                android:visibility="gone"
                />
        </RelativeLayout>
    </com.daimajia.swipe.SwipeLayout>

</RelativeLayout>